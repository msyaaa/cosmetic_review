<div class="side-bar">
  <label for="menu" class="close">✖︎</label>
  <%# ユーザー %>
  <div class='side-nav'>
    <ul class='side-lists'>
      <% if user_signed_in? %>
        <li>
          <div class='user-img-content'>
            <%= image_tag current_user.image ,class:"mini-img" if current_user.image.attached? %>
            <%= link_to current_user.nickname, user_path(current_user.id) %>
          </div>
        </li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "login" %></li>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <%# //ユーザー %>
  <%# カテゴリー検索 %>
  <div class="item-categories-side">
    <%= link_to  posts_path, class: "category-button", id: 'categoBtn' do %>
      カテゴリーから探す
    <% end %>
  </div>
  <%# //カテゴリー検索 %>
</div>